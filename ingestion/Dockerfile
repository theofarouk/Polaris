FROM python:3.11-slim

RUN apt-get update && apt-get install -y --no-install-recommends     build-essential libxml2-dev libxslt1-dev libz-dev libpq-dev curl ca-certificates &&     rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

COPY . /app
CMD ["bash"]
